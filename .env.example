# ========================================
# 로컬 개발 환경 변수
# ========================================
# 사용법: 이 파일을 .env로 복사하여 사용하세요
# cp .env.example .env

# ========================================
# MySQL (RDS 대체)
# ========================================
MYSQL_ROOT_PASSWORD=your-strong-root-password
MYSQL_DATABASE=oauth2_jwt
MYSQL_USER=travel_user
MYSQL_PASSWORD=your-strong-password
MYSQL_PORT=3306

# ========================================
# Redis (ElastiCache 대체)
# ========================================
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password

# ========================================
# Spring Boot 설정
# ========================================
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080

# Spring DataSource (Docker 컨테이너 내부에서 사용)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql-db:3306/oauth2_jwt?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
SPRING_DATASOURCE_USERNAME=travel_user
SPRING_DATASOURCE_PASSWORD=your-strong-password

# Redis 설정
SPRING_DATA_REDIS_HOST=redis-cache
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=your-strong-redis-password

# ========================================
# JWT 시크릿 (프로덕션에서는 AWS Secrets Manager 사용 권장)
# ========================================
# 최소 256비트 이상의 랜덤 문자열 사용 권장
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits-required

# ========================================
# OAuth2 설정 - Google
# ========================================
GOOGLE_CLIENT_NAME=google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google
GOOGLE_AUTHORIZATION_GRANT_TYPE=authorization_code
GOOGLE_SCOPE=profile,email

# ========================================
# OAuth2 설정 - Naver
# ========================================
NAVER_CLIENT_NAME=naver
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:8080/login/oauth2/code/naver
NAVER_AUTHORIZATION_GRANT_TYPE=authorization_code
NAVER_SCOPE=name,email

# Naver Provider 설정
NAVER_AUTHORIZATION_URI=https://nid.naver.com/oauth2.0/authorize
NAVER_TOKEN_URI=https://nid.naver.com/oauth2.0/token
NAVER_USER_INFO_URI=https://openapi.naver.com/v1/nid/me
NAVER_USER_NAME_ATTRIBUTE=response

# ========================================
# Next.js 설정
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NODE_ENV=development

# ========================================
# MailHog (SES 대체 - 로컬 테스트용)
# ========================================
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# ========================================
# File Upload 설정
# ========================================
APP_UPLOAD_DIR=uploads
APP_BASE_URL=http://localhost:8080

# ========================================
# MinIO (S3 대체 - 로컬 개발용)
# ========================================
MINIO_ROOT_USER=your-minio-username
MINIO_ROOT_PASSWORD=your-strong-minio-password
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=travel-images
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
